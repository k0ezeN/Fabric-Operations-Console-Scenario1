{
	"compilerOptions": {
		"alwaysStrict": true,
		"sourceMap": true,
		"target": "es5",
		"removeComments": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"stripInternal": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		"noUnusedLocals": true,
		"lib": [
			"es2015",
			"dom"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"**/*.d.ts",
	]
}
